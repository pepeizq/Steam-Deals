                            <controls:ImageEx Source="Assets/icon_dlgamer.ico" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoDLGamer" Text="DLGamer" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </ScrollViewer> 
            
            <TextBlock x:Name="tbMensajeTienda" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" />

