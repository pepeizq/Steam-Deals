                                                    <TextBlock x:Uid="SelectClear"/>
                                                </ToolTipService.ToolTip>

                                                <StackPanel Orientation="Horizontal" Tag="2">
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE739;" FontSize="22" Foreground="White"/>
                                                </StackPanel>
                                            </ListViewItem>
                                        </ListView>
                                    </controls:DropShadowPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <controls:DropShadowPanel VerticalAlignment="Top" Color="DarkOliveGreen"
                                                              BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                                        <controls:DropShadowPanel.Transitions>
                                            <TransitionCollection>
                                                <EdgeUIThemeTransition Edge="Bottom"/>
                                            </TransitionCollection>
                                        </controls:DropShadowPanel.Transitions>

                                        <ListView x:Name="lvOpcionesAmazonUk" IsItemClickEnabled="True" Background="{StaticResource BrushSecundario}" 
                                                  ItemClick="LvOpcionesAmazonUkItemClick">
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Background="Transparent" Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ListView.ItemsPanel>

                                            <ListViewItem MinWidth="0">
                                                <ToolTipService.ToolTip>
                                                    <TextBlock x:Uid="ScreenCapture"/>
                                                </ToolTipService.ToolTip>

                                                <StackPanel Orientation="Horizontal" Tag="0">
                                                    <SymbolIcon Symbol="Camera" Foreground="White"/>
                                                </StackPanel>
                                            </ListViewItem>
                                            <ListViewItem MinWidth="0">
                                                <ToolTipService.ToolTip>
                                                    <TextBlock x:Uid="Refresh"/>
                                                </ToolTipService.ToolTip>

                                                <StackPanel Orientation="Horizontal" Tag="1">
                                                    <SymbolIcon Symbol="Refresh" Foreground="White"/>
                                                </StackPanel>
                                            </ListViewItem>
                                        </ListView>
                                    </controls:DropShadowPanel>
                                    <TextBlock x:Uid="OrderDeals" Margin="20,0,5,0" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cbOrdenarAmazonUk" Width="120" VerticalAlignment="Center" Margin="0,0,10,0">
                                        <ComboBoxItem x:Uid="Discount"/>
                                        <ComboBoxItem x:Uid="Price"/>
                                        <ComboBoxItem x:Uid="Title"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>

                <Grid x:Name="gridEditor" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="tbEditorTitulo" Grid.Row="0" Padding="5" TextWrapping="Wrap" Margin="0,0,0,10"/>
                        <TextBox x:Name="tbEditorEnlaces" Grid.Row="1" Padding="5" TextWrapping="Wrap" Margin="0,0,0,10" AcceptsReturn="True"/>
                        <TextBlock x:Name="tbEditorEnlacesLimite" x:Uid="EditorLimit" Grid.Row="1" Padding="5" Margin="5" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" TextWrapping="Wrap" Visibility="Collapsed"/>

                        <ListView x:Name="lvEditor" Grid.Row="2" IsItemClickEnabled="True" ItemClick="LvEditorItemClick" HorizontalAlignment="Center">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Background="Transparent" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>

                            <ListViewItem Background="{StaticResource BrushSecundario}">
                                <StackPanel Orientation="Horizontal" Tag="0">
                                    <SymbolIcon Symbol="Copy" Foreground="White" Margin="0,0,10,0"/>
                                    <TextBlock x:Uid="EditorCopyTitle" Foreground="White"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="{StaticResource BrushSecundario}" Margin="5,0,25,0">
                                <StackPanel Orientation="Horizontal" Tag="1">
                                    <SymbolIcon Symbol="Cut" Foreground="White" Margin="0,0,10,0"/>
                                    <TextBlock x:Uid="EditorCutTitle" Foreground="White"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="{StaticResource BrushSecundario}">
                                <StackPanel Orientation="Horizontal" Tag="2">
                                    <SymbolIcon Symbol="Copy" Foreground="White" Margin="0,0,10,0"/>
                                    <TextBlock x:Uid="EditorCopyDeals" Foreground="White"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="{StaticResource BrushSecundario}" Margin="5,0,25,0">
                                <StackPanel Orientation="Horizontal" Tag="3">
                                    <SymbolIcon Symbol="Cut" Foreground="White" Margin="0,0,10,0"/>
                                    <TextBlock x:Uid="EditorCutDeals" Foreground="White"/>
                                </StackPanel>
                            </ListViewItem>
                            <ListViewItem Background="{StaticResource BrushSecundario}">
                                <StackPanel Orientation="Horizontal" Tag="4">
                                    <SymbolIcon Symbol="Delete" Foreground="White" Margin="0,0,10,0"/>
                                    <TextBlock x:Uid="EditorCleanAll" Foreground="White"/>
                                </StackPanel>
                            </ListViewItem>
                        </ListView>
                    </Grid>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="tbEditorEnlacesNum" VerticalAlignment="Center"/>
                            <AppBarSeparator />
                            <TextBlock x:Name="tbEditorEnlacesTienda" VerticalAlignment="Center"/>
                            <AppBarSeparator />
                            <TextBlock x:Name="tbEditorNumCaracteres" VerticalAlignment="Center"/>
                        </StackPanel>

                        <ComboBox x:Name="cbEditorTipo" Padding="5" Margin="0,5" HorizontalAlignment="Stretch">
                            <ComboBoxItem>
                                <ComboBoxItem.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <controls:ImageEx Source="Assets/web_reddit.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                        <TextBlock Text="Reddit"/>
                                    </StackPanel>
                                </ComboBoxItem.Content>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <ComboBoxItem.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <controls:ImageEx Source="Assets/web_vayaansias.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                        <TextBlock Text="VayaAnsias"/>
                                    </StackPanel>
                                </ComboBoxItem.Content>
                            </ComboBoxItem>
                        </ComboBox>
                        <TextBox x:Name="tbEditorEtiquetas" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>
                        <TextBox x:Name="tbEditorNotas" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>
                    </StackPanel>
                </Grid>

                <Grid x:Name="gridConfig" Visibility="Collapsed">
                    <ScrollViewer>
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Uid="Deals2" Margin="10,5" FontSize="16"/>
                            <Rectangle HorizontalAlignment="Left" Fill="Black" Height="1" Margin="5" Width="400"/>

                            <Grid Margin="10,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Uid="ConfigOrder" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cbConfigTipoOrdenar" Grid.Column="1" Width="120">
                                    <ComboBoxItem x:Uid="Discount"/>
                                    <ComboBoxItem x:Uid="Price"/>
                                    <ComboBoxItem x:Uid="Title"/>
                                </ComboBox>
                            </Grid>

                            <CheckBox x:Name="cbConfigDescartarUltimaVisita" x:Uid="ConfigDiscardLastVisit" Margin="10,5"/>

                            <CheckBox x:Name="cbConfigDescartarMisJuegos" Margin="10,5">
                                <CheckBox.Content>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock x:Uid="ConfigDiscardMyGames" Grid.Row="0"/>

                                        <Grid Grid.Row="1" Margin="0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <SymbolIcon Grid.Column="0" Symbol="Important" Margin="0,0,5,0"/>
                                            <TextBlock x:Uid="ConfigDiscardMyGamesWarning" Grid.Column="1" VerticalAlignment="Center"/>
                                        </Grid>

                                        <StackPanel x:Name="spSteamConfigCuenta" Grid.Row="2" Orientation="Vertical">
                                            <TextBlock x:Uid="ConfigDiscardMyGamesAccount" Margin="5" TextWrapping="Wrap"/>
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <ProgressRing x:Name="prSteamConfigCuenta" IsActive="True" Grid.Column="0" Visibility="Collapsed" Margin="0,0,15,0" />
                                                <TextBox x:Name="tbSteamConfigCuentaID" Grid.Column="1"/>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </CheckBox.Content>
                            </CheckBox>

                            <TextBlock x:Uid="Editor2" Margin="10,50,10,5" FontSize="16"/>
                            <Rectangle HorizontalAlignment="Left" Fill="Black" Height="1" Margin="5" Width="400"/>

                            <CheckBox x:Name="cbConfigEditor" Margin="10,5">
                                <CheckBox.Content>
                                    <TextBlock x:Uid="ConfigEditorWarning" TextWrapping="Wrap" VerticalAlignment="Center"/>
                                </CheckBox.Content>
                            </CheckBox>

                            <Grid Margin="10,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Uid="Currencies" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" 
                                       HorizontalAlignment="Right"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="botonDivisasActualizar" Background="{StaticResource BrushSecundario}" Padding="10">
                                        <SymbolIcon Symbol="Refresh" Foreground="White"/>
                                    </Button>

                                    <controls:ImageEx Source="Assets/pais_ue2.png" Margin="15,0,5,0" Width="32" Height="24"/>
                                    <TextBlock VerticalAlignment="Center" Text="1 €"/>
                                    <controls:ImageEx Source="Assets/pais_us2.png" Margin="15,0,5,0" Width="32" Height="24"/>
                                    <TextBlock x:Name="tbDivisasDolar" VerticalAlignment="Center"/>
                                    <controls:ImageEx Source="Assets/pais_uk2.png" Margin="15,0,5,0" Width="32" Height="24"/>
                                    <TextBlock x:Name="tbDivisasLibra" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="10,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Uid="Rating" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" 
                                       HorizontalAlignment="Right"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="botonValoracionActualizar" Background="{StaticResource BrushSecundario}" Padding="10">
                                        <SymbolIcon Symbol="Refresh" Foreground="White"/>
                                    </Button>

                                    <TextBlock x:Name="tbValoracionAvance" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

