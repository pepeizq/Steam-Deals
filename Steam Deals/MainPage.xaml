<Page
    x:Class="Steam_Deals.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="FeedRSS">
            <Grid Tag="{Binding Enlace}" Margin="1">
                <TextBlock Text="{Binding Titulo}" TextWrapping="Wrap" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTopAcrilico" Grid.Row="0" Height="32"/>
        <Grid Grid.Row="0">
            <Grid.Background>
                <SolidColorBrush Color="DarkOliveGreen" Opacity="0.6"/>
            </Grid.Background>
            
            <TextBlock x:Name="tbTitulo" Foreground="White" Margin="65,0,0,0" VerticalAlignment="Center" FontSize="13"/>
        </Grid>
        <Grid Grid.Row="1" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="gridMenuAcrilico" Grid.Column="0"/>
            <Grid x:Name="gridMenu" Grid.Column="0">
                <Grid.Background>
                    <SolidColorBrush Color="DarkOliveGreen" Opacity="0.6"/>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Vertical">
                    <Button x:Name="botonOfertas" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonOfertasTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <Image Source="Assets\steam_logo.png" Width="26" Height="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonEditor" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonEditorTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" FontSize="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonConfig" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonConfigTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <Button x:Name="botonVotar" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonVotarTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8E1;" FontSize="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                    <Button x:Name="botonMasCosas" Foreground="White" Background="Transparent" Padding="15">
                        <ToolTipService.ToolTip>
                            <TextBlock x:Name="botonMasCosasTexto" FontSize="16"/>
                        </ToolTipService.ToolTip>

                        <Button.Content>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE712;" FontSize="26" HorizontalAlignment="Center"/>
                        </Button.Content>
                    </Button>
                </StackPanel> 
            </Grid>

            <Grid x:Name="gridDeals" Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:DropShadowPanel Grid.Column="0" Margin="10" VerticalAlignment="Top" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="spTiendas" Background="OliveDrab">
                            <Button x:Name="botonTiendaSteam" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_steam.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoSteam" Text="Steam" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaGamersGate" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_gamersgate.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoGamersGate" Text="GamersGate" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaGamesPlanet" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_gamesplanet.png" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoGamesPlanet" Text="GamesPlanet" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaHumble" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_humble.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoHumble" Text="Humble" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaGreenManGaming" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_gmg.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoGreenManGaming" Text="Green Man Gaming" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaBundleStars" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_bundlestars.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoBundleStars" Text="BundleStars" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaGOG" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_gog.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoGOG" Text="GOG" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaWinGameStore" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_wingamestore.png" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoWinGameStore" Text="WinGameStore" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaSilaGames" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_silagames.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoSilaGames" Text="Sila Games" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaDLGamer" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_dlgamer.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoDLGamer" Text="DLGamer" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaNuuvem" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_nuuvem.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoNuuvem" Text="Nuuvem" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaMicrosoftStore" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_microsoft.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoMicrosoftStore" Text="Microsoft Store" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaAmazonEs" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_amazon.png" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoAmazonEs" Text="Amazon.es" Foreground="White"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="botonTiendaAmazonUk" Padding="10,15" Background="Transparent" HorizontalContentAlignment="Left" Width="200" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/icon_amazon.png" Width="16" Height="16" Margin="5,0,10,0"/>
                                    <TextBlock x:Name="botonTiendaTextoAmazonUk" Text="Amazon.co.uk" Foreground="White"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </controls:DropShadowPanel>

                <Grid Grid.Column="1">
                    <controls:DropShadowPanel x:Name="panelMensajeTienda" Grid.Row="1" Margin="10" Color="Black" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                        <Grid Padding="10" Background="IndianRed">
                            <TextBlock x:Name="tbMensajeTienda" TextWrapping="Wrap" Foreground="White"/>
                        </Grid>
                    </controls:DropShadowPanel>
                   
                    <Grid x:Name="gridTiendaSteam" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Padding="10">
                            <ListView x:Name="listadoSteam" IsItemClickEnabled="True">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>

                            <Grid x:Name="gridProgresoSteam" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressRing x:Name="prSteam" IsActive="True" Height="54" Width="54" Foreground="Black"/>
                                <TextBlock x:Name="tbProgresoSteam" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Grid>

                        <controls:DropShadowPanel Grid.Row="1" Margin="10" HorizontalAlignment="Right" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                            <controls:DropShadowPanel.Transitions>
                                <TransitionCollection>
                                    <EdgeUIThemeTransition Edge="Right"/>
                                </TransitionCollection>
                            </controls:DropShadowPanel.Transitions>
                            
                            <StackPanel Orientation="Horizontal" Background="OliveDrab">
                                <StackPanel x:Name="spEditorSteam" Orientation="Horizontal">
                                    <TextBlock x:Name="tbNumOfertasSteam" VerticalAlignment="Center" Foreground="White"/>
                                    <Button x:Name="botonEditorUltimasOfertasSteam" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorUltimasOfertasSteam" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <SymbolIcon Symbol="Bullets" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="botonEditorSeleccionarTodoSteam" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorSeleccionarTodoSteam" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE73A;" FontSize="22" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="botonEditorSeleccionarNadaSteam" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorSeleccionarNadaSteam" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE739;" FontSize="22" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <AppBarSeparator Foreground="White"/>
                                </StackPanel>
                                <Button x:Name="botonActualizarSteam" Background="Transparent" Padding="15,10" Margin="0,0,10,0">
                                    <SymbolIcon Symbol="Refresh" Foreground="White"/>
                                </Button>
                                <TextBlock x:Name="tbOrdenarSteam" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
                                <ComboBox x:Name="cbOrdenarSteam" Width="120" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <ComboBoxItem x:Name="cbOrdenarSteamDescuento"/>
                                    <ComboBoxItem x:Name="cbOrdenarSteamPrecio"/>
                                    <ComboBoxItem x:Name="cbOrdenarSteamTitulo"/>
                                </ComboBox>
                            </StackPanel>
                        </controls:DropShadowPanel>
                    </Grid>

                    <Grid x:Name="gridTiendaGamersGate" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Padding="10">
                            <ListView x:Name="listadoGamersGate" IsItemClickEnabled="True">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>

                            <Grid x:Name="gridProgresoGamersGate" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressRing x:Name="prGamersGate" IsActive="True" Height="54" Width="54" Foreground="Black"/>
                                <TextBlock x:Name="tbProgresoGamersGate" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Grid>

                        <controls:DropShadowPanel Grid.Row="1" Margin="10" HorizontalAlignment="Right" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                            <controls:DropShadowPanel.Transitions>
                                <TransitionCollection>
                                    <EdgeUIThemeTransition Edge="Right"/>
                                </TransitionCollection>
                            </controls:DropShadowPanel.Transitions>

                            <StackPanel Orientation="Horizontal" Background="OliveDrab">
                                <StackPanel x:Name="spEditorGamersGate" Orientation="Horizontal">
                                    <TextBlock x:Name="tbNumOfertasGamersGate" VerticalAlignment="Center" Foreground="White"/>
                                    <Button x:Name="botonEditorUltimasOfertasGamersGate" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorUltimasOfertasGamersGate" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <SymbolIcon Symbol="Bullets" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="botonEditorSeleccionarTodoGamersGate" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorSeleccionarTodoGamersGate" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE73A;" FontSize="22" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="botonEditorSeleccionarNadaGamersGate" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorSeleccionarNadaGamersGate" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE739;" FontSize="22" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <AppBarSeparator Foreground="White"/>
                                </StackPanel>
                                <Button x:Name="botonActualizarGamersGate" Background="Transparent" Padding="15,10" Margin="0,0,10,0">
                                    <SymbolIcon Symbol="Refresh" Foreground="White"/>
                                </Button>
                                <TextBlock x:Name="tbOrdenarGamersGate" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
                                <ComboBox x:Name="cbOrdenarGamersGate" Width="120" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <ComboBoxItem x:Name="cbOrdenarGamersGateDescuento"/>
                                    <ComboBoxItem x:Name="cbOrdenarGamersGatePrecio"/>
                                    <ComboBoxItem x:Name="cbOrdenarGamersGateTitulo"/>
                                </ComboBox>
                            </StackPanel>
                        </controls:DropShadowPanel>
                    </Grid>

                    <Grid x:Name="gridTiendaGamesPlanet" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Padding="10">
                            <ListView x:Name="listadoGamesPlanet" IsItemClickEnabled="True">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>

                            <Grid x:Name="gridProgresoGamesPlanet" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressRing x:Name="prGamesPlanet" IsActive="True" Height="54" Width="54" Foreground="Black"/>
                                <TextBlock x:Name="tbProgresoGamesPlanet" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Grid>

                        <controls:DropShadowPanel Grid.Row="1" Margin="10" HorizontalAlignment="Right" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                            <controls:DropShadowPanel.Transitions>
                                <TransitionCollection>
                                    <EdgeUIThemeTransition Edge="Right"/>
                                </TransitionCollection>
                            </controls:DropShadowPanel.Transitions>

                            <StackPanel Orientation="Horizontal" Background="OliveDrab">
                                <StackPanel x:Name="spEditorGamesPlanet" Orientation="Horizontal">
                                    <TextBlock x:Name="tbNumOfertasGamesPlanet" VerticalAlignment="Center" Foreground="White"/>
                                    <Button x:Name="botonEditorUltimasOfertasGamesPlanet" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorUltimasOfertasGamesPlanet" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <SymbolIcon Symbol="Bullets" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="botonEditorSeleccionarTodoGamesPlanet" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorSeleccionarTodoGamesPlanet" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE73A;" FontSize="22" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="botonEditorSeleccionarNadaGamesPlanet" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorSeleccionarNadaGamesPlanet" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE739;" FontSize="22" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <AppBarSeparator Foreground="White"/>
                                </StackPanel>
                                <Button x:Name="botonActualizarGamesPlanet" Background="Transparent" Padding="15,10" Margin="0,0,10,0">
                                    <SymbolIcon Symbol="Refresh" Foreground="White"/>
                                </Button>
                                <TextBlock x:Name="tbOrdenarGamesPlanet" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
                                <ComboBox x:Name="cbOrdenarGamesPlanet" Width="120" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <ComboBoxItem x:Name="cbOrdenarGamesPlanetDescuento"/>
                                    <ComboBoxItem x:Name="cbOrdenarGamesPlanetPrecio"/>
                                    <ComboBoxItem x:Name="cbOrdenarGamesPlanetTitulo"/>
                                </ComboBox>
                            </StackPanel>
                        </controls:DropShadowPanel>
                    </Grid>

                    <Grid x:Name="gridTiendaHumble" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Padding="10">
                            <ListView x:Name="listadoHumble" IsItemClickEnabled="True">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>

                            <Grid x:Name="gridProgresoHumble" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressRing x:Name="prHumble" IsActive="True" Height="54" Width="54" Foreground="Black"/>
                                <TextBlock x:Name="tbProgresoHumble" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Grid>

                        <controls:DropShadowPanel Grid.Row="1" Margin="10" HorizontalAlignment="Right" Color="Black"
                                                  BlurRadius="4" ShadowOpacity="0.5" OffsetZ="5">
                            <controls:DropShadowPanel.Transitions>
                                <TransitionCollection>
                                    <EdgeUIThemeTransition Edge="Right"/>
                                </TransitionCollection>
                            </controls:DropShadowPanel.Transitions>

                            <StackPanel Orientation="Horizontal" Background="OliveDrab">
                                <StackPanel x:Name="spEditorHumble" Orientation="Horizontal">
                                    <TextBlock x:Name="tbNumOfertasHumble" VerticalAlignment="Center" Foreground="White"/>
                                    <Button x:Name="botonEditorUltimasOfertasHumble" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorUltimasOfertasHumble" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <SymbolIcon Symbol="Bullets" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="botonEditorSeleccionarTodoHumble" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorSeleccionarTodoHumble" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE73A;" FontSize="22" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="botonEditorSeleccionarNadaHumble" Background="Transparent" Padding="15,10">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Name="tbEditorSeleccionarNadaHumble" FontSize="16"/>
                                        </ToolTipService.ToolTip>

                                        <Button.Content>
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE739;" FontSize="22" Foreground="White"/>
                                        </Button.Content>
                                    </Button>
                                    <AppBarSeparator Foreground="White"/>
                                </StackPanel>
                                <Button x:Name="botonActualizarHumble" Background="Transparent" Padding="15,10" Margin="0,0,10,0">
                                    <SymbolIcon Symbol="Refresh" Foreground="White"/>
