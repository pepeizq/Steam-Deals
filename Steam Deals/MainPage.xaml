<Page
    x:Class="Steam_Deals.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:fa="using:FontAwesome.UWP"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ColorGridPrincipal}">
        <Grid.Transitions>
            <TransitionCollection>
                <EdgeUIThemeTransition Edge="Bottom"/>
            </TransitionCollection>
        </Grid.Transitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTitulo" Grid.Row="0" Background="{StaticResource GridTituloBackground}">
            <TextBlock x:Name="tbTitulo" Margin="15,0,0,0" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
        </Grid>

        <NavigationView x:Name="nvPrincipal" Grid.Row="1" Loaded="Nv_Loaded" ItemInvoked="Nv_ItemInvoked"
                        AlwaysShowHeader="False" IsSettingsVisible="False" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="itemTiendas" Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                    <NavigationViewItem.Icon>
                        <fa:FontAwesome Icon="CaretDown" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.Content>
                        <TextBlock x:Uid="Stores" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout x:Name="botonTiendasMenu"/>
                    </FlyoutBase.AttachedFlyout>
                </NavigationViewItem>
                <Button x:Name="botonTiendaSeleccionada" Margin="-10,0,0,0" Background="Transparent" BorderBrush="Transparent" Visibility="Collapsed" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                    <StackPanel Orientation="Horizontal" Padding="0">
                        <controls:ImageEx x:Name="imagenTiendaSeleccionada" Height="16" Width="16" IsCacheEnabled="True" MinWidth="0"/>
                        <TextBlock x:Name="tbTiendaSeleccionada" Margin="16,0,0,0" Foreground="{StaticResource BrushPrimario}"/>
                    </StackPanel>
                </Button>
                <NavigationViewItemSeparator/>
                <NavigationViewItem x:Name="itemEditor" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Visibility="Collapsed">
                    <NavigationViewItem.Icon>
                        <fa:FontAwesome Icon="Pencil" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.Content>
                        <TextBlock x:Uid="Editor2" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.PaneFooter>
                <StackPanel Orientation="Horizontal">
                    <NavigationViewItem x:Name="itemConfig" Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                        <NavigationViewItem.Icon>
                            <fa:FontAwesome Icon="Cog" Foreground="{StaticResource BrushPrimario}"/>
                        </NavigationViewItem.Icon>
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout>
                                <ToggleMenuFlyoutItem x:Name="itemConfigNotificaciones" x:Uid="ConfigNotifications"/>
                                <MenuFlyoutSeparator/>
                                <ToggleMenuFlyoutItem x:Name="itemConfigUltimaVisita" x:Uid="ConfigLastVisit"/>
                                <ToggleMenuFlyoutItem x:Name="itemConfigEditor" x:Uid="Editor2"/>
                                <ToggleMenuFlyoutItem x:Name="itemConfigMostrarImagenes" Text="Mostrar Imágenes"/>
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>
                    </NavigationViewItem>
                    <NavigationViewItemSeparator/>
                    <NavigationViewItem x:Name="itemMasCosas" MinWidth="0" Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout x:Name="botonMasCosasMenu"/>
                        </FlyoutBase.AttachedFlyout>
                    </NavigationViewItem>
                </StackPanel>
            </NavigationView.PaneFooter>

            <Grid>
                <Grid.Transitions>
                    <TransitionCollection>
                        <EdgeUIThemeTransition Edge="Bottom"/>
                    </TransitionCollection>
                </Grid.Transitions>

                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid x:Name="gridOfertas" Visibility="Collapsed">

                    <Grid x:Name="gridSeleccionarOfertasTiendas">
                        <StackPanel x:Name="spPresentacionEditor" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Uid="SelectStore2" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                            <GridView x:Name="gvOfertasTiendas" ItemContainerStyle="{StaticResource GridViewEstilo1}" IsItemClickEnabled="True" Margin="50,0,50,20"/>
                            <CheckBox x:Name="cbOfertasTiendasUltimosResultados" Content="Mostrar Últimos Resultados" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <Grid x:Name="gridPresentacionpepeizqdeals">
                            <ScrollViewer>
                                <WebView x:Name="wvPresentacion"/>
                            </ScrollViewer>
                        </Grid>
                    </Grid>

                    <Grid x:Name="gridOfertasTiendasSupremo">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="gridOfertasTiendas" Grid.Row="0" Visibility="Collapsed"/>
                        <StackPanel x:Name="spOfertasTiendasEditor" Grid.Row="1" Orientation="Horizontal" Padding="10" Visibility="Collapsed">
                            <Button x:Name="botonActualizarOfertas" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:FontAwesome Icon="Refresh" Foreground="{StaticResource BrushPrimario}"/>
                                        <TextBlock x:Uid="Refresh" Foreground="{StaticResource BrushPrimario}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button x:Name="botonOrdenarOfertas" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}" Margin="5,0,0,0">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:FontAwesome Icon="Sort" Foreground="{StaticResource BrushPrimario}"/>
                                        <TextBlock x:Uid="OrderDeals" Foreground="{StaticResource BrushPrimario}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button.Content>
                                <Button.Flyout>
                                    <MenuFlyout x:Name="botonOrdenarMenu"/>
                                </Button.Flyout>
                            </Button>
                            <Grid Margin="8,3" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1,0,0,0"/>
                            <Button x:Name="botonSeleccionarTodo" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:FontAwesome Icon="CheckSquare" Foreground="{StaticResource BrushPrimario}"/>
                                        <TextBlock x:Uid="SelectAll" Foreground="{StaticResource BrushPrimario}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button x:Name="botonLimpiarSeleccion" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}" Margin="5,0,0,0">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:FontAwesome Icon="Square" Foreground="{StaticResource BrushPrimario}"/>
                                        <TextBlock x:Uid="SelectClear" Foreground="{StaticResource BrushPrimario}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Grid Margin="8,3" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1,0,0,0"/>
                            <ComboBox x:Name="cbFiltradoEditorAnalisis" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <ComboBox x:Name="cbFiltradoEditorDesarrolladores" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            <TextBlock x:Name="tbNumOfertasCargadas2" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            <TextBlock x:Name="tbNumOfertasSeleccionadas2" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            <TextBlock x:Name="tbNumFavoritosSeleccionados2" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        </StackPanel> 
                    </Grid>

                    <Grid x:Name="gridProgreso" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                        <ProgressRing x:Name="prOfertasProgreso" IsActive="True" Height="54" Width="54" Foreground="{StaticResource BrushPrimario}"/>
                        <TextBlock x:Name="tbOfertasProgreso" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid x:Name="gridNoOfertas" Padding="10" Background="IndianRed" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="NoDeals" TextWrapping="Wrap" Foreground="White"/>
                            <TextBlock x:Name="tbNumOfertasCargadas" Margin="5,0,0,0" Foreground="White" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid x:Name="gridEditor" Visibility="Collapsed">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                            <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="20,10,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <ComboBox x:Name="cbEditorWebs" MinWidth="200" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                <ComboBoxItem PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <ComboBoxItem.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <controls:ImageEx Source="Assets\Webs\web_pepeizq.png" Width="16" Height="16" IsCacheEnabled="True" Margin="0,0,10,0"/>
                                            <TextBlock Text="pepeizq's deals"/>
                                        </StackPanel>
                                    </ComboBoxItem.Content>
                                </ComboBoxItem>
                                <ComboBoxItem PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <ComboBoxItem.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <controls:ImageEx Source="Assets\Webs\web_reddit.ico" Width="16" Height="16" IsCacheEnabled="True" Margin="0,0,10,0"/>
                                            <TextBlock Text="Reddit"/>
                                        </StackPanel>
                                    </ComboBoxItem.Content>
                                </ComboBoxItem>
                                <ComboBoxItem PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <ComboBoxItem.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <controls:ImageEx Source="Assets\Webs\web_vayaansias.ico" Width="16" Height="16" IsCacheEnabled="True" Margin="0,0,10,0"/>
                                            <TextBlock Text="VayaAnsias"/>
                                        </StackPanel>
                                    </ComboBoxItem.Content>
                                </ComboBoxItem>
                            </ComboBox>

                            <TextBlock x:Name="tbNumOfertasSeleccionadas" Margin="15,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="botonEditorAbrirCarpetaDatos" Background="{StaticResource BrushPrimario}" Margin="10,0" Padding="10,5" VerticalAlignment="Center" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Uid="ConfigFolderData" Foreground="White"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <Button x:Name="botonEditorActualizarAnalisis" Background="{StaticResource BrushPrimario}" Margin="10,0" Padding="10,5" VerticalAlignment="Center" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Uid="Rating" Foreground="White"/>
                                        <TextBlock x:Name="tbEditorAnalisisAvance" Margin="10,0,0,0" Foreground="White" Visibility="Collapsed"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <Button x:Name="botonEditorAbrirEnlace" Background="{StaticResource BrushPrimario}" Margin="10,0,30,0" Padding="10,5" VerticalAlignment="Center" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                <Button.Content>
                                    <fa:FontAwesome Icon="Globe" Foreground="White"/>
                                </Button.Content>
                            </Button>

                            <TextBlock x:Name="tbDivisasDolar" VerticalAlignment="Center"/>
                            <TextBlock x:Name="tbDivisasLibra" Margin="10,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="tbDivisasRublo" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="gridEditorpepeizqdeals" Grid.Row="1" Visibility="Collapsed" Padding="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10">
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="botonEditorpepeizqdealsDeals" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock x:Uid="Deals2" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsDeals" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="20,0">
                                <Button x:Name="botonEditorpepeizqdealsBundles" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock x:Uid="Bundles" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsBundles" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="botonEditorpepeizqdealsFree" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock x:Uid="Free" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsFree" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="20,0">
                                <Button x:Name="botonEditorpepeizqdealsSuscripciones" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock x:Uid="Subscriptions" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsSuscripciones" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="botonEditorpepeizqdealsAnuncios" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock x:Uid="Announcements" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsAnuncios" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="20,0">
                                <Button x:Name="botonEditorpepeizqdealsCuentas" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock x:Uid="Accounts" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsCuentas" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="botonEditorpepeizqdealsIconos" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock Text="Assets" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsIconos" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="20,0">
                                <Button x:Name="botonEditorpepeizqdealsCupones" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock x:Uid="Coupons" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsCupones" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="botonEditorpepeizqdealsRss" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock Text="RSS" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsRss" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="20,0">
                                <Button x:Name="botonEditorpepeizqdealsSteamDB" Background="{StaticResource BrushPrimario}" Padding="20,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <TextBlock Text="SteamDB" Foreground="White" FontSize="16"/>
                                    </Button.Content>
                                </Button>

                                <Grid x:Name="bordeEditorpepeizqdealsSteamDB" Margin="0,10,0,0" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="0,1,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                        </StackPanel>

                        <Grid Grid.Row="1" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1">
                            <ScrollViewer x:Name="svEditorpepeizqdealsDeals" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Padding="20" Visibility="Collapsed">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock x:Uid="Title2"/>
                                    <TextBox x:Name="tbEditorTitulopepeizqdeals" Margin="0,10,0,15" TextWrapping="Wrap"/>
                                    <Grid x:Name="gridEditorEnlacepepeizqdealsDosJuegos" Margin="0,10,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <ComboBox x:Name="cbEditorTitulopepeizqdealsPublishers" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                        <ComboBox x:Name="cbEditorTitulopepeizqdealsLogosJuegos" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                        <TextBox x:Name="tbEditorTitulopepeizqdealsCabeceraImagenDimensiones" Grid.Column="2" TextWrapping="Wrap" Margin="0,0,20,0"/>
                                        <Button x:Name="botonEditorTitulopepeizqdealsCabeceraImagen" Grid.Column="3" Background="{StaticResource BrushPrimario}" Margin="0,0,15,0" Padding="10,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                            <Button.Content>
                                                <StackPanel>
                                                    <fa:FontAwesome Icon="Folder" Foreground="White"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBox x:Name="tbEditorTitulopepeizqdealsCabeceraImagen" Grid.Column="4" TextWrapping="Wrap" TextAlignment="Justify"/>
                                    </Grid>
                                    <Grid x:Name="gridEditorEnlacepepeizqdeals" HorizontalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock x:Uid="Url" Grid.Row="0"/>

                                        <Grid Grid.Row="1" Margin="0,10,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox x:Name="tbEditorEnlacepepeizqdeals" Grid.Column="0" TextWrapping="Wrap" TextAlignment="Justify"/>
                                            <Button x:Name="botonEditorEnlaceAbrirpepeizqdeals" Grid.Column="1" Background="{StaticResource BrushPrimario}" Margin="15,0,0,0" Padding="10,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                                <Button.Content>
                                                    <StackPanel>
                                                        <fa:FontAwesome Icon="Globe" Foreground="White"/>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                    <Grid x:Name="gridEditorImagenpepeizqdeals" HorizontalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock x:Uid="Image" Grid.Row="0"/>
                                        <Grid Grid.Row="1" Margin="0,10,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Button x:Name="botonEditorImagenpepeizqdeals" Grid.Column="0" Background="{StaticResource BrushPrimario}" Margin="0,0,15,0" Padding="10,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                                <Button.Content>
                                                    <StackPanel>
                                                        <fa:FontAwesome Icon="Folder" Foreground="White"/>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>
                                            <TextBox x:Name="tbEditorImagenpepeizqdeals" Grid.Column="1" TextWrapping="Wrap" TextAlignment="Justify"/>
                                        </Grid>
                                    </Grid>
                                    <Grid x:Name="gridEditorComplementopepeizqdeals" HorizontalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
