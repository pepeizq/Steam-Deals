<Page
    x:Class="Steam_Deals.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:fa="using:FontAwesome.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ColorGridPrincipal}">
        <Grid.Transitions>
            <TransitionCollection>
                <EdgeUIThemeTransition Edge="Bottom"/>
            </TransitionCollection>
        </Grid.Transitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTitulo" Grid.Row="0" Background="{StaticResource GridTituloBackground}">
            <TextBlock x:Name="tbTitulo" Margin="50,0,0,0" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
        </Grid>

        <NavigationView x:Name="nvPrincipal" Grid.Row="1" ItemInvoked="Nv_ItemInvoked"
                        OpenPaneLength="200" AlwaysShowHeader="False" IsSettingsVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="itemTiendas" Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                    <NavigationViewItem.Icon>
                        <fa:FontAwesome Icon="Home" Foreground="White"/>
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.Content>
                        <TextBlock x:Uid="Stores" Foreground="White"/>
                    </NavigationViewItem.Content>
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout x:Name="botonTiendasMenu"/>
                    </FlyoutBase.AttachedFlyout>
                </NavigationViewItem>
                <StackPanel Orientation="Horizontal" Margin="-1,0,0,0" Padding="0">
                    <controls:ImageEx x:Name="imagenTiendaSeleccionada" Height="16" Width="16" IsCacheEnabled="True"/>
                    <TextBlock x:Name="tbTiendaSeleccionada" Margin="17,0,0,0" Foreground="White"/>
                </StackPanel> 
            </NavigationView.MenuItems>
            <NavigationView.PaneFooter>
                <StackPanel Orientation="Vertical">
                    <NavigationViewItem Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                        <NavigationViewItem.Icon>
                            <fa:FontAwesome Icon="Cog" Foreground="White"/>
                        </NavigationViewItem.Icon>
                        <NavigationViewItem.Content>
                            <TextBlock x:Uid="Config" Foreground="White"/>
                        </NavigationViewItem.Content>
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout>
                                <MenuFlyoutSubItem x:Name="itemDivisas" x:Uid="ConfigCurrency" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <MenuFlyoutItem x:Name="itemDivisasEuro"/>
                                    <MenuFlyoutItem x:Name="itemDivisasDolar"/>
                                    <MenuFlyoutItem x:Name="itemDivisasLibra"/>
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>
                    </NavigationViewItem> 
                    <NavigationViewItemSeparator/>
                    <NavigationViewItem x:Name="itemMasCosas" Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout x:Name="botonMasCosasMenu"/>
                        </FlyoutBase.AttachedFlyout>
                    </NavigationViewItem>
                </StackPanel>
            </NavigationView.PaneFooter>

            <Grid>
                <Grid.Transitions>
                    <TransitionCollection>
                        <EdgeUIThemeTransition Edge="Bottom"/>
                    </TransitionCollection>
                </Grid.Transitions>

                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid x:Name="gridOfertas" Visibility="Collapsed">

                    <Grid x:Name="gridSeleccionarOfertasTiendas">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Uid="SelectStore" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                            <GridView x:Name="gvOfertasTiendas" ItemContainerStyle="{StaticResource GridViewEstilo1}" IsItemClickEnabled="True" MaxWidth="700"/>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="gridOfertasTiendas" Visibility="Collapsed"/>

                    <Grid x:Name="gridProgreso" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                        <ProgressRing x:Name="prOfertasProgreso" IsActive="True" Height="54" Width="54" Foreground="{StaticResource BrushSecundario}"/>
                        <TextBlock x:Name="tbOfertasProgreso" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid x:Name="panelNoOfertas" Padding="10" Background="IndianRed"  HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                        <TextBlock x:Uid="NoDeals" TextWrapping="Wrap" Foreground="White"/>
                    </Grid>

                    <Grid x:Name="gridOfertasBarraInferior" Grid.Row="2" Padding="10" Background="{StaticResource GridTituloBackground}" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel x:Name="spEditor" Grid.Column="0" Orientation="Horizontal" Visibility="Collapsed">

                            <Button x:Name="botonEditorIniciar" Margin="10,0,40,0" Padding="10" BorderThickness="0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#59151;" FontSize="20" Foreground="White" Margin="0,0,10,0"/>
                                        <TextBlock x:Uid="Editor2" Foreground="White"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <Button x:Name="botonEditorSeleccionarTodo" Padding="10" BorderThickness="0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                                <ToolTipService.ToolTip>
                                    <TextBlock x:Uid="SelectAll" FontSize="15"/>
                                </ToolTipService.ToolTip>

                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE73A;" FontSize="20" Foreground="White"/>
                                    </StackPanel>
                                </Button.Content>

                                <Button.Flyout>
                                    <MenuFlyout x:Name="menuEditorSeleccionarOpciones"/>
                                </Button.Flyout>
                            </Button>

                            <Button x:Name="botonEditorLimpiarSeleccion" Margin="15,0,40,0" Padding="10" BorderThickness="0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                                <ToolTipService.ToolTip>
                                    <TextBlock x:Uid="SelectClear" FontSize="15"/>
                                </ToolTipService.ToolTip>

                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE739;" FontSize="20" Foreground="White"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Name="tbNumOfertasSeleccionadas" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock x:Name="tbNumOfertasCargadas" VerticalAlignment="Center" Foreground="White"/>
                            </StackPanel>

                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <TextBlock x:Name="tbNumOfertasMostradas" VerticalAlignment="Center" Foreground="White"/>

                            <Button x:Name="botonActualizarTienda" Margin="35,0" Padding="10" BorderThickness="0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                                <Button.Content>
                                    <SymbolIcon Symbol="Refresh" Foreground="White"/>
                                </Button.Content>
                            </Button>

                            <TextBlock x:Uid="OrderDeals" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
                            <ComboBox x:Name="cbOrdenar" Width="120" VerticalAlignment="Center" SelectedIndex="0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                <ComboBoxItem x:Uid="Discount"/>
                                <ComboBoxItem x:Uid="Price"/>
                                <ComboBoxItem x:Uid="Title"/>
                                <ComboBoxItem x:Uid="Review"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </NavigationView>

        <Grid x:Name="gridEditor" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="{StaticResource GridTituloBackground}">
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="cbEditorWebs" Margin="20,10" MinWidth="200" VerticalAlignment="Center" SelectedIndex="0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                        <ComboBoxItem PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets\Webs\web_pepeizqdeals.png" Width="16" Height="16" IsCacheEnabled="True" Margin="0,0,10,0"/>
                                    <TextBlock Text="pepeizq's deals"/>
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets\Webs\web_vayaansias.ico" Width="16" Height="16" IsCacheEnabled="True" Margin="0,0,10,0"/>
                                    <TextBlock Text="VayaAnsias"/>
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                            <ComboBoxItem.Content>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets\Webs\web_reddit.ico" Width="16" Height="16" IsCacheEnabled="True" Margin="0,0,10,0"/>
                                    <TextBlock Text="Reddit"/>
                                </StackPanel>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                    </ComboBox>

                    <StackPanel x:Name="spEditorpepeizq" Orientation="Horizontal" Margin="30,0,0,0">
                        <Button x:Name="botonEditorExportarExcel" Margin="5" Padding="10" BorderThickness="0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="FileExcelOutline" Foreground="White" Margin="0,0,10,0"/>
                                    <TextBlock x:Uid="EditorExportExcel" Foreground="White"/>
                                </StackPanel>                                 
                            </Button.Content>
                        </Button>

                        <Button x:Name="botonEditorInsertarHtmlTabla" Margin="5" Padding="10" BorderThickness="0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="Table" Foreground="White" Margin="0,0,10,0"/>
                                    <TextBlock x:Uid="EditorInsertHtmlTable" Foreground="White"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    
                </StackPanel>                             
            </Grid>

            <Grid Grid.Row="1">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <WebView x:Name="wvEditor"/>
            </Grid>

            <Grid Grid.Row="2" Padding="10" Background="{StaticResource GridTituloBackground}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">

                    <Button x:Name="botonOfertasVolver" Margin="10,0,40,0" Padding="10" BorderThickness="0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#59179;" FontSize="20" Foreground="White" Margin="0,0,10,0"/>
                                <TextBlock x:Uid="Deals2" Foreground="White"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <controls:ImageEx x:Name="imagenEditorTienda" IsCacheEnabled="True" Height="16" Width="16" VerticalAlignment="Center"/>
                    <TextBlock x:Name="tbEditorTienda" VerticalAlignment="Center" Foreground="White" Margin="10,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
