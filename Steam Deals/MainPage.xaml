                            <Button x:Name="botonEditorSeleccionarNadaAmazonEs" Background="Transparent" Padding="15,10">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="ClearSelection" Foreground="White" Margin="0,0,10,0"/>
                                        <TextBlock x:Name="tbEditorSeleccionarNadaAmazonEs" Foreground="White"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <AppBarSeparator Foreground="White"/>
                        </StackPanel>
                        <Button x:Name="botonActualizarAmazonEs" Background="Transparent" Padding="15,10" Margin="0,0,10,0">
                            <SymbolIcon Symbol="Refresh" Foreground="White"/>
                        </Button>
                        <TextBlock x:Name="tbOrdenarAmazonEs" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
                        <ComboBox x:Name="cbOrdenarAmazonEs" Width="120" VerticalAlignment="Center">
                            <ComboBoxItem x:Name="cbOrdenarAmazonEsDescuento"/>
                            <ComboBoxItem x:Name="cbOrdenarAmazonEsPrecio"/>
                            <ComboBoxItem x:Name="cbOrdenarAmazonEsTitulo"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <Grid x:Name="gridEditor" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="tbEditorTitulo" Grid.Row="0" Padding="5" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBox x:Name="tbEditorEnlaces" Grid.Row="1" Padding="5" TextWrapping="Wrap" AcceptsReturn="True"/>
                    <TextBlock x:Name="tbEditorEnlacesLimite" Grid.Row="1" Padding="5" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Visibility="Collapsed"/>
                </Grid>

                <Grid Grid.Column="1" Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock x:Name="tbEditorEnlacesNum" Padding="5" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="tbEditorEnlacesTienda" Padding="5" HorizontalAlignment="Center" Margin="0,5"/>
                        <ComboBox x:Name="cbEditorTipo" Padding="5" Margin="0,5" HorizontalAlignment="Stretch">
                            <ComboBoxItem>
                                <ComboBoxItem.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <controls:ImageEx Source="Assets/web_reddit.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                        <TextBlock Text="Reddit"/>
                                    </StackPanel>
                                </ComboBoxItem.Content>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <ComboBoxItem.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <controls:ImageEx Source="Assets/web_vayaansias.ico" Width="16" Height="16" Margin="5,0,10,0"/>
                                        <TextBlock Text="VayaAnsias"/>
                                    </StackPanel>
                                </ComboBoxItem.Content>
                            </ComboBoxItem>
                        </ComboBox>
                        <TextBox x:Name="tbEditorEtiquetas" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>
                        <TextBox x:Name="tbEditorNotas" Padding="5" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>
                        <TextBlock x:Name="tbEditorAviso" Padding="5" TextWrapping="Wrap" Margin="0,5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Padding="10">
                        <TextBlock Text="Rating" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Button x:Name="botonValoracionActualizar" Background="Transparent" Padding="15,10" Margin="0,0,10,0">
                            <SymbolIcon Symbol="Refresh"/>
                        </Button>
                        <TextBlock x:Name="tbValoracionAvance" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Padding="10">
                        <controls:ImageEx Source="Assets/pais_ue2.png" Margin="0,0,5,0" Width="32" Height="24"/>
                        <TextBlock VerticalAlignment="Center" Text="1 €"/>
                        <controls:ImageEx Source="Assets/pais_us2.png" Margin="15,0,5,0" Width="32" Height="24"/>
                        <TextBlock x:Name="tbDivisasDolar" VerticalAlignment="Center"/>
                        <controls:ImageEx Source="Assets/pais_uk2.png" Margin="15,0,5,0" Width="32" Height="24"/>
                        <TextBlock x:Name="tbDivisasLibra" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Background="OliveDrab">
                <Button x:Name="botonEditorCopiarTitulo" Background="Transparent" Padding="15,10">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Copy" Foreground="White" Margin="0,0,10,0"/>
                            <TextBlock x:Name="tbEditorCopiarTitulo" Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button x:Name="botonEditorCortarTitulo" Background="Transparent" Padding="15,10">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Cut" Foreground="White" Margin="0,0,10,0"/>
                            <TextBlock x:Name="tbEditorCortarTitulo" Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <AppBarSeparator Foreground="White"/>
                <Button x:Name="botonEditorCopiarEnlaces" Background="Transparent" Padding="15,10">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Copy" Foreground="White" Margin="0,0,10,0"/>
                            <TextBlock x:Name="tbEditorCopiarEnlaces" Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button x:Name="botonEditorCortarEnlaces" Background="Transparent" Padding="15,10">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Cut" Foreground="White" Margin="0,0,10,0"/>
                            <TextBlock x:Name="tbEditorCortarEnlaces" Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <AppBarSeparator Foreground="White"/>
                <Button x:Name="botonEditorBorrarTodo" Background="Transparent" Padding="15,10">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Delete" Foreground="White" Margin="0,0,10,0"/>
                            <TextBlock x:Name="tbEditorBorrarTodo" Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

        <StackPanel x:Name="gridConfig" Visibility="Collapsed" Padding="20">
            <TextBlock x:Name="tbConfig" FontSize="23" Margin="5,0,0,15"/>
            <Border BorderThickness="0,1,0,0" BorderBrush="Black" Margin="0,0,0,25" Width="300" HorizontalAlignment="Left"/>

            <TextBlock x:Name="tbSteamConfigCuenta" Margin="5" TextWrapping="Wrap" />
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ProgressRing x:Name="prSteamConfigCuenta" IsActive="True" Grid.Column="0" Visibility="Collapsed" Margin="0,0,15,0" />
                <TextBox x:Name="tbSteamConfigCuentaID" Grid.Column="1"/>
            </Grid>
            <CheckBox x:Name="cbConfigDescartarDeseados" Margin="10,15,5,5">
                <CheckBox.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="tbConfigDescartar" Grid.Row="0"/>
                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <SymbolIcon Grid.Column="0" Symbol="Important" Margin="0,0,5,0"/>
                            <TextBlock x:Name="tbConfigDescartarAviso" Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </CheckBox.Content>
            </CheckBox>
            <CheckBox x:Name="cbConfigDescartarUltimaVisita" Margin="10,15,5,5"/>
            <Grid Margin="10,15,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="tbConfigTipoOrdenar" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbConfigTipoOrdenar" Grid.Column="1" Width="120">
                    <ComboBoxItem x:Name="cbConfigTipoDescuento"/>
                    <ComboBoxItem x:Name="cbConfigTipoPrecio"/>
                    <ComboBoxItem x:Name="cbConfigTipoTitulo"/>
                </ComboBox>
            </Grid>
            <CheckBox x:Name="cbConfigEditor" Margin="10,15,5,5"/>
        </StackPanel>

        <Grid x:Name="gridWeb" Visibility="Collapsed" Padding="5">
            <WebView x:Name="webViewWeb" Source="https://pepeizqapps.com/contact/" />
        </Grid>
    </Grid>
</Page>
