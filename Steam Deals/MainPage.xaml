                            <controls:ImageEx Source="Assets/icon_steam.ico" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoSteam" Text="Steam" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="botonTiendaGamersGate" Margin="0,0,0,5" Padding="7" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="0" Width="170">
                        <StackPanel Orientation="Horizontal">
                            <controls:ImageEx Source="Assets/icon_gamersgate.ico" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoGamersGate" Text="GamersGate" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="botonTiendaGamesPlanet" Margin="0,0,0,5" Padding="7" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="0" Width="170">
                        <StackPanel Orientation="Horizontal">
                            <controls:ImageEx Source="Assets/icon_gamesplanet.png" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoGamesPlanet" Text="GamesPlanet" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="botonTiendaHumble" Margin="0,0,0,5" Padding="7" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="0" Width="170">
                        <StackPanel Orientation="Horizontal">
                            <controls:ImageEx Source="Assets/icon_humble.ico" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoHumble" Text="Humble" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="botonTiendaGreenManGaming" Margin="0,0,0,5" Padding="7" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="0" Width="170">
                        <StackPanel Orientation="Horizontal">
                            <controls:ImageEx Source="Assets/icon_gmg.ico" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoGreenManGaming" Text="Green Man Gaming" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="botonTiendaBundleStars" Margin="0,0,0,5" Padding="7" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="0" Width="170">
                        <StackPanel Orientation="Horizontal">
                            <controls:ImageEx Source="Assets/icon_bundlestars.ico" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoBundleStars" Text="BundleStars" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="botonTiendaGOG" Margin="0,0,0,5" Padding="7" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="0" Width="170">
                        <StackPanel Orientation="Horizontal">
                            <controls:ImageEx Source="Assets/icon_gog.ico" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoGOG" Text="GOG" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="botonTiendaWinGameStore" Margin="0,0,0,5" Padding="7" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="0" Width="170">
                        <StackPanel Orientation="Horizontal">
                            <controls:ImageEx Source="Assets/icon_wingamestore.png" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoWinGameStore" Text="WinGameStore" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="botonTiendaSilaGames" Margin="0,0,0,5" Padding="7" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="0" Width="170">
                        <StackPanel Orientation="Horizontal">
                            <controls:ImageEx Source="Assets/icon_silagames.ico" Width="16" Height="16"/>
                            <TextBlock x:Name="botonTiendaTextoSilaGames" Text="Sila Games" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="botonTiendaDLGamer" Margin="0,0,0,5" Padding="7" Background="Transparent" HorizontalContentAlignment="Left" BorderThickness="0" Width="170">
